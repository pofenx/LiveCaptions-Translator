<Page
    x:Class="LiveCaptionsTranslator.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingPage"
    JournalEntry.KeepAlive="False"
    mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical">
            <StackPanel Margin="15,0,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="2.5,0,0,5" Text="Windows 实时字幕" />
                    <ui:Flyout x:Name="LiveCaptionsInfoFlyout">
                        <TextBlock Width="300" TextWrapping="Wrap">
                            <Run Text="在 Windows 11 24H2 之后，你只能在 Windows 实时字幕中更改" />
                            <Run FontWeight="DemiBold" TextDecorations="Underline" Text="源语言（Source Language）" />
                            <Run Text="。" />
                            <Run FontWeight="Bold" Text="&#x0A;&#x0A;注意：" />
                            <Run Text="请点击" />
                            <Run FontWeight="Bold" Text="“隐藏（Hide）”" />
                            <Run Text="来隐藏 Windows 实时字幕，而不是直接关闭窗口。" />
                        </TextBlock>
                    </ui:Flyout>
                    <Button
                        x:Name="LiveCaptionsInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="LiveCaptionsInfo_MouseEnter"
                        MouseLeave="LiveCaptionsInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                </StackPanel>
                <ui:Button
                    x:Name="LiveCaptionsButton"
                    Width="120"
                    Height="30"
                    Padding="11,4,11,4"
                    Click="LiveCaptionsButton_click">
                    <TextBlock x:Name="ButtonText" Text="Show" />
                </ui:Button>
            </StackPanel>

            <StackPanel Margin="15,10,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="2.5,0,0,5" Text="接口调用间隔" />
                    <ui:Flyout x:Name="FrequencyInfoFlyout">
                        <TextBlock Width="300" TextWrapping="Wrap">
                            <Run Text="控制翻译接口调用频率。数值越小，调用越频繁。" />
                            <Run Text="&#x0A;在字幕变化" />
                            <Run FontWeight="SemiBold" Text="[接口调用间隔]" />
                            <Run Text="次后调用一次翻译接口。" />
                        </TextBlock>
                    </ui:Flyout>
                    <Button
                        x:Name="FrequencyInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="FrequencyInfo_MouseEnter"
                        MouseLeave="FrequencyInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Slider
                        Width="120"
                        Margin="0,0,5,0"
                        AutoToolTipPlacement="TopLeft"
                        AutoToolTipPrecision="0"
                        Maximum="10"
                        Value="{Binding MaxSyncInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Margin="15,0,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="2.5,0,0,5" Text="翻译接口" />
                    <ui:Flyout x:Name="TranslateAPIInfoFlyout">
                        <TextBlock
                            Width="300"
                            Text="除 Google 与 Google2 外，其他接口在使用前都需要先完成配置。"
                            TextWrapping="Wrap" />
                    </ui:Flyout>
                    <Button
                        x:Name="TranslateAPIInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="TranslateAPIInfo_MouseEnter"
                        MouseLeave="TranslateAPIInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                </StackPanel>
                <ComboBox
                    x:Name="TranslateAPIBox"
                    Width="150"
                    Height="30"
                    Padding="10,4,10,7"
                    FontSize="13.3"
                    SelectedItem="{Binding ApiName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionChanged="TranslateAPIBox_SelectionChanged" />
            </StackPanel>

            <StackPanel Margin="15,10,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        Margin="2.5,0,0,5"
                        VerticalAlignment="Center"
                        Text="目标语言" />
                    <ui:Flyout x:Name="TargetLangInfoFlyout">
                        <TextBlock Width="350" TextWrapping="Wrap">
                            <Run FontWeight="DemiBold" TextDecorations="Underline" Text="“列表里没有我想要的目标语言！”" />
                            <Run Text="&#x0A;你可以直接编辑此下拉框的内容自定义语言，推荐遵循" />
                            <Run FontWeight="Bold" Text="BCP 47 语言标签。" />
                            <Run FontWeight="Bold" Text="&#x0A;&#x0A;注意：" />
                            <Run Text="部分接口（例如 DeepL）需要使用自己的方式指定目标语言，详情请参考对应接口的官方文档。" />
                            <Run Text="&#x0A;对于内置的目标语言，我们已经做了标签映射；如果你使用列表外的语言，请注意这一点。" />
                        </TextBlock>
                    </ui:Flyout>
                    <Button
                        x:Name="TargetLangInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="TargetLangInfo_MouseEnter"
                        MouseLeave="TargetLangInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                </StackPanel>
                <ComboBox
                    x:Name="TargetLangBox"
                    Width="150"
                    Height="30"
                    Padding="10,4,10,7"
                    FontSize="13.3"
                    IsEditable="True"
                    LostFocus="TargetLangBox_LostFocus"
                    SelectionChanged="TargetLangBox_SelectionChanged" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="2" Orientation="Vertical">
            <StackPanel Margin="15,0,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="2.5,0,0,5" Text="接口设置" />
                </StackPanel>
                <ui:Button
                    x:Name="APISettingButton"
                    Width="100"
                    Height="30"
                    Padding="11,4,11,4"
                    Click="APISettingButton_click">
                    <TextBlock Text="Open" />
                </ui:Button>
            </StackPanel>
            <StackPanel Margin="15,10,0,0" Orientation="Vertical">
                    <TextBlock Margin="2.5,0,0,5" Text="显示延迟" />
                <ui:ToggleSwitch
                    Width="100"
                    Height="30"
                    Padding="10,4,10,7"
                    IsChecked="{Binding MainWindow.LatencyShow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    OffContent="关"
                    OnContent="开" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="3" Orientation="Vertical">
            <StackPanel Margin="15,0,0,0" Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Margin="2.5,0,0,5" Text="上下文句数" />
                    <ui:Flyout x:Name="CaptionLogMaxInfoFlyout">
                        <TextBlock Width="300" TextWrapping="Wrap">
                            <Run FontWeight="Bold" Text="上下文句数（Contexts）：" />
                            <Run Text="启用“上下文感知”时，用于参与上下文翻译的句子数量。" />
                            <Run FontWeight="Bold" Text="&#x0A;悬浮句数（Overlay Sentences）：" />
                            <Run Text="开启“日志卡片”或悬浮窗口时，同时显示的句子数量（也决定悬浮窗口最多显示多少句字幕）。" />
                            <Run FontWeight="Bold" Text="&#x0A;&#x0A;注意：" />
                            <Run Text="上下文句数必须" />
                            <Run FontWeight="Bold" Text="大于或等于" />
                            <Run Text="显示句数；如果不满足，程序会自动进行调整。" />
                        </TextBlock>
                    </ui:Flyout>
                    <Button
                        x:Name="CaptionLogMaxInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="CaptionLogMaxInfo_MouseEnter"
                        MouseLeave="CaptionLogMaxInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                </StackPanel>
                <ui:NumberBox
                    Width="135"
                    Height="30"
                    Padding="10,4,10,7"
                    FontSize="13.3"
                    ClearButtonEnabled="False"
                    AcceptsExpression="False"
                    SpinButtonPlacementMode="Inline"
                    Maximum="10"
                    Minimum="1"
                    LargeChange="1"
                    SmallChange="1"
                    Value="{Binding NumContexts, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValueChanged="Contexts_ValueChanged" />
            </StackPanel>

            <StackPanel Margin="15,10,0,0" Orientation="Vertical">
                <TextBlock Margin="2.5,0,0,5" Text="显示句数" />
                <ui:NumberBox
                    Width="135"
                    Height="30"
                    Padding="10,4,10,7"
                    FontSize="13.3"
                    ClearButtonEnabled="False"
                    AcceptsExpression="False"
                    SpinButtonPlacementMode="Inline"
                    Maximum="6"
                    Minimum="0"
                    LargeChange="1"
                    SmallChange="1"
                    Value="{Binding DisplaySentences, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ValueChanged="DisplaySentences_ValueChanged" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="4" Orientation="Vertical">
            <StackPanel Margin="15,0,0,0" Orientation="Vertical">
                <TextBlock Margin="2.5,0,0,5" Text="上下文感知" />
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:ToggleSwitch
                        Width="90"
                        Height="30"
                        Padding="10,4,10,7"
                        IsChecked="{Binding ContextAware, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        OffContent="关"
                        OnContent="开" />
                    <Button
                        x:Name="ContextAwareInfo"
                        Width="15"
                        Height="15"
                        Margin="-5,-3,0,0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        MouseEnter="ContextAwareInfo_MouseEnter"
                        MouseLeave="ContextAwareInfo_MouseLeave">
                        <ui:SymbolIcon Symbol="Info16" />
                    </Button>
                    <ui:Flyout x:Name="ContextAwareInfoFlyout">
                        <TextBlock Width="300" TextWrapping="Wrap">
                            <Run Text="基于上下文进行翻译。" />
                            <Run Text="&#x0A;可以提升翻译准确度，但会消耗更多的 tokens。" />
                        </TextBlock>
                    </ui:Flyout>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
