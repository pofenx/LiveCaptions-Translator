<ui:FluentWindow
    x:Class="LiveCaptionsTranslator.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LiveCaptionsTranslator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{DynamicResource Welcome_Title}"
    Width="700"
    Height="490"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    WindowBackdropType="Mica"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Grid.Row="0"
            Height="27"
            ShowMaximize="False"
            ShowMinimize="False">
            <ui:TitleBar.Header>
                <ui:TextBlock Padding="15,0,0,0" VerticalAlignment="Center" Text="{DynamicResource Welcome_Title}" />
            </ui:TitleBar.Header>
        </ui:TitleBar>

        <StackPanel Grid.Row="1" Background="{ui:ThemeResource SystemFillColorNeutralBackgroundBrush}">
            <TextBlock
                Margin="20"
                HorizontalAlignment="Left"
                FontSize="24"
                FontWeight="Bold"
                Text="{DynamicResource Welcome_Header}"
                TextAlignment="Left" />
            <ui:TextBlock
                Margin="20,10,20,10"
                TextAlignment="Left"
                TextWrapping="Wrap">
                <Run Text="字幕实时翻译 基于 Windows 实时字幕功能。" />
                <Run Text="在第一次使用前，请按照下面步骤完成配置：&#x0A;" />
                <Run Text="&#x0A;1. 打开 Windows 实时字幕，按照系统向导下载本地语音识别组件和语言包。" />
                <Run Text="&#x0A;2. 在 Windows 实时字幕中点击" />
                <Run FontWeight="Bold" Text="⚙️ 设置齿轮" />
                <Run Text="图标，打开设置菜单，并选择" />
                <Run FontWeight="Bold" Text="“位置 &gt; 覆盖在屏幕上（Overlaid on screen）”" />
                <Run Text="。&#x0A;3. 在 字幕实时翻译 的设置页中点击" />
                <Run FontWeight="Bold" Text="“隐藏（Hide）”" />
                <Run Text="按钮来隐藏 Windows 实时字幕窗口。&#x0A;" />
                <Run Text="&#x0A;程序已自动为你打开设置页并启动 Windows 实时字幕。" />
                <Run Text="完成上述配置后，你就可以返回主界面，开始享受实时音频翻译功能了。&#x0A;" />
                <!-- <Run Text="&#x0A;了解更多详细说明，请访问我们的 Wiki：" /> -->
            
                <Run FontWeight="Bold" Text="&#x0A;&#x0A;小提示：" />
                <Run Text="如果需要修改" />
                <Run FontWeight="DemiBold" TextDecorations="Underline" Text="源语言（Source Language）" />
                <Run Text="，请在设置页中点击 [显示] Windows 实时字幕，然后在 Windows 实时字幕里进行更改。" />
            </ui:TextBlock>

            <ui:Button
                Margin="0,10,0,0"
                Padding="30,10,30,10"
                HorizontalAlignment="Center"
                Click="CloseButton_Click"
                Content="{DynamicResource Welcome_Close}" />
        </StackPanel>
    </Grid>
</ui:FluentWindow>